<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:background="@android:color/black">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/post_publisher_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ign"
        />

    <TextView
        android:id="@+id/post_publisher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/post_title_news"
        app:layout_constraintStart_toEndOf="@+id/post_publisher_logo"
        android:layout_margin="5dp"
        android:text="IGN"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/text_color_secondary"
        />

    <TextView
        android:id="@+id/post_title_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/post_publisher_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/post_image_news"
        android:text="Ubisoft has released a new game."
        android:textColor="@color/text_color"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="20sp"
        />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/post_image_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/post_title_news"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        android:src="@drawable/test_post_img"
        app:shapeAppearanceOverlay="@style/roundImageview"
        />

    <com.like.LikeButton
        android:id="@+id/star_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon_type="heart"
        app:icon_size="25dp"
        app:layout_constraintTop_toBottomOf="@+id/post_image_news"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>